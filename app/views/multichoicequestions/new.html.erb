<%= form_for :multichoicequestion, url: vocabulary_multichoicequestions_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.label :audio%><br>
    <%= f.text_field :audio, :value => @voca_audio %>
    </p>    
  <p>
    <%= f.label :image%><br>
    <%= f.text_field :image, :value => @voca_image %>
    </p>    
    <p>
    <%= f.label :choice1%><br>
    <%= f.text_area :choice1 %>
  </p>  
      <p>
    <%= f.label :choice2%><br>
    <%= f.text_area :choice2 %>
  </p>  
    <p>
    <%= f.label :choice3%><br>
    <%= f.text_area :choice3 %>
  </p>  
    <p>
    <%= f.label :answer%><br>
    <%= f.text_field :answer, :value => @voca_name %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', vocabulary_multichoicequestions_path %>