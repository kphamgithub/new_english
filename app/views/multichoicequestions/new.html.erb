<%= form_for :multichoicequestion, url: multichoicequestions_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </p>
  
  <% if @vocabulary != nil %>
    <p> Voca name = <%= @vocabulary.name %></p>
    <p>
    <%= f.label :vocabulary%><br>
    <%= f.text_field :vocabulary, :value => @vocabulary.name %>
    </p>
   <% else %>
    <p>
    <%= f.label :vocabulary%><br>
    <%= f.text_field :vocabulary %>
    </p>    
   <% end %>
  <p>
    <%= f.label :media%><br>
    <%= f.text_field :media %>
    </p>    
    <p>
    <%= f.label :choice1%><br>
    <%= f.text_area :choice1 %>
  </p>  
      <p>
    <%= f.label :choice2%><br>
    <%= f.text_area :choice2 %>
  </p>  
    <p>
    <%= f.label :choice3%><br>
    <%= f.text_area :choice3 %>
  </p>  
    <p>
    <%= f.label :answer%><br>
    <%= f.text_field :answer %>
  </p>  

<p><%= collection_select :quiz, "id", Quiz.all, :id, :name %></p>
  <p>
  <%= check_box_tag "add_to_quiz" %>Add this question to selected quiz:
  </p>
<p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', multichoicequestions_path %>
