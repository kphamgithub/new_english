<h1>Add an examquestion</h1>
<h3><%= @exam.name %></h3>
<%= link_to 'Create new multichoice question', new_multichoicequestion_path(:exam_id => @exam_id) %>
<%= link_to 'Create new fill question', new_fillquestion_path(:exam_id => @exam_id) %>
<%= link_to 'Create new cloze question', new_clozequestion_path(:exam_id => @exam_id) %>
<%= link_to 'Create new match question', new_matchquestion_path(:exam_id => @exam_id) %>
<%= link_to 'Create new scrambler question', new_scrambler_path(:exam_id => @exam_id) %>
<p> Select questions: </p>
<%= form_tag exam_examquestions_path :method=>'post' do %>
    <% @sorted_available_questions.each do |q| %>	
		<%= check_box_tag q.class.to_s + '_' + q.id.to_s %> <%= q.name %> id = <%= q.id %>created on:<%= q.created_at %>
	<p>
	<% end %>
	</p>
	<p>
	<%= submit_tag "Save selection" %>
	</p>
	<% end %>