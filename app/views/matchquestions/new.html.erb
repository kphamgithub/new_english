<%= form_tag (matchquestions_path) do %>
  <p>
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </p>
  <p>
    <%= label_tag :matchid%><br>
    <%= text_field_tag :match_id %>
  </p> 
  <div>
  <table>
    <th><%= label_tag :left %></th>
	<th><%= label_tag :right %></th>
	<% (0..1).each_with_index do | t,index | %>
    <tr>
    <td>
    <%= text_field_tag "left" + index.to_s %>
	</td>
    <td>
    <%= text_field_tag "right" + index.to_s %>
	</td>
	</tr>
	<% end %>
  </table>
  </div>  
  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', matchquestions_path %>