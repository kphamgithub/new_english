<%= form_for :fillquestion, url: fillquestions_path(:quiz_id => @quiz_id,:lesson_id => @lesson_id ) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </p>
  
  <p>
    <%= f.label :answer%><br>
    <%= f.text_area :answer %>
  </p>

  <p>
  <%= check_box_tag "add_to_quiz" %>Add this question to this quiz:
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', lessons_path %>
