<h1>New Quiz</h1>
<%= form_for ([@lesson, @quiz]), url: lesson_quizs_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name, :value => 'Quiz ' + @quiz_number +' for '+@lesson.name %>
  </p>

  <p>
    <%= f.label :quiz_type %><br>
    <%= f.text_area :quiz_type, :value => 'vocabulary'%>
  </p>
  
    <p>
    <%= f.label :lesson %>&nbsp<%= @lesson.name %><br>
    <%= f.text_field :lesson_id, :value => @lesson.id ,:readonly => true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Quisz List', lesson_quizs_path(@lesson) %>
