<h3>Quizzes for "<%= @lesson.name %>"</h3>
<% @quizs.each do |q| %>
	<p>
	<%= q.name %>&nbsp quiz id = <%= q.id %> quiz type = <strong><%= q.quiz_type %></strong>
	There are <%= q.quizpages.count %> pages in this quiz.
	<% if q.quizpages.count > 0 %>
	<%= link_to 'Take quiz', take_quiz_lesson_quiz_path(q.lesson,q) %> 
	<% end %>
	<% if current_user.name == "kpham" %>
	<%= link_to 'Show', lesson_quiz_path(q.lesson,q) %>	
	<%= button_to "Delete ", { action: "destroy", id: q.id }, method: :delete, data: { confirm: "Are you sure?" } %>
	<% end %> 
	</p>
	<p>
  <% end %>
  </p>
<% if current_user.name == "kpham" %>
<%= link_to 'Add quiz', new_lesson_quiz_path %>
<% end %> 
