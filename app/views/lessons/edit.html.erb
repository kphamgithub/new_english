<h1> EDIT LESSON </h1>
<%= form_for :lesson, url: lesson_path(@lesson), method: :patch do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.cktext_area :content  %>
  </p>
  
    <p>
    <%= f.label :video %><br>
    <%= f.text_field :video %>
  </p>
  
    <p>
    <%= f.label :level%><br>
    <%= f.text_field :level  %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', lessons_path %>