<%= form_for :lesson, url: lessons_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.cktext_area :content, :value => '', :id => 'mycontent' %>
  </p>

  <p>
    <%= f.label :video%><br>
    <%= f.text_field :video, :value => 'none' %>
  </p>  
  
    <p>
    <%= f.label :level%><br>
    <%= f.text_field :level %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', lessons_path %>