<%= form_for :lesson, url: lessons_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :reading %><br>
    <%= f.cktext_area :reading_content, :value => '', :id => 'mycontent' %>
  </p>

    <p>
    <%= f.label :vocabulary %><br>
    <%= f.cktext_area :vocabulary_content, :value => '', :id => 'myvocabulary_content' %>
  </p>

    <p>
    <%= f.label :grammar %><br>
    <%= f.cktext_area :grammar_content, :value => '', :id => 'mygrammar' %>
  </p>
  
    <p>
    <%= f.label :phonics %><br>
    <%= f.cktext_area :phonics_content, :value => '', :id => 'myphonics' %>
  </p>
  
  <p>
    <%= f.label :video%><br>
    <%= f.text_field :video, :value => 'none' %>
  </p>  
  
    <p>
    <%= f.label :level%><br>
    <%= f.text_field :level %>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back to Lessons List', lessons_path %>